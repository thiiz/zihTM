{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ZihTM",
  "version": "0.1.0",
  "identifier": "com.zihtm.app",
  "build": {
    "beforeDevCommand": "bun dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "ZihTM",
        "width": 0,
        "height": 0,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "bin/windows/nu.exe"
    ]
  }
}